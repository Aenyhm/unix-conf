{
  "auto_update": false,
  "base_keymap": "SublimeText",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": ["Zed Plex Mono"],
  "buffer_font_size": 14,
  "buffer_font_weight": 100,
  "cursor_blink": false,
  "scrollbar": { "show": "never" },
  "toolbar": { "breadcrumbs": false, "quick_actions": false },
  "format_on_save": "off",
  "file_types": {
    "C": ["c", "keymap"],
    "HTML": ["html", "jinja"]
  },
  "git": { "inline_blame": { "enabled": false } },
  "indent_guides": { "enabled": false },
  "languages": {
    //"C": { "enable_language_server": false },
    "Python": { "enable_language_server": false, "tab_size": 4 }
  },
  "preferred_line_length": 100,
  "soft_wrap": "editor_width",
  "show_wrap_guides": false,
  "tab_size": 2,
  "telemetry": { "diagnostics": false, "metrics": false },
  "terminal": { "font_size": 15 },
  "theme": "AeTheme Dark",
  "outline_panel": { "button": false },
  "ui_font_size": 15,

  "gutter": { "folds": false },
  "collaboration_panel": { "button": false },
  "agent": { "button": false },
  "show_call_status_icon": false,
  "notification_panel": { "button": false },
  "restore_on_startup": "last_workspace",
  "debugger": {
    "log_dap_communications": true
  },
  "diagnostics_max_severity": "off",
  "project_panel": {
    "show_diagnostics": "off",
  }
}
